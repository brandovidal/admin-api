{
  "name": "node-prisma-mongo-skeleton",
  "version": "1.0.0",
  "description": "Node project skeleton using Typescript, ESLint, TS-Standard and Nodemon",
  "main": "index.js",
  "repository": "git@github.com:brandovidal/node-typescript-skeleton.git",
  "author": "Brando Vidal",
  "license": "MIT",
  "scripts": {
    "postinstall": "npx prisma generate && npx prisma db push",
    "prepare": "husky install",
    "lint": "eslint src/",
    "lint-fix": "eslint src/ --fix",
    "swagger": "tsoa spec",
    "prisma-generate": "dotenv -e .env.development -- npx prisma generate && npx prisma db push",
    "prisma-generate-test": "dotenv -e .env.test -- npx prisma generate && npx prisma db push",
    "prisma-generate-dev": "dotenv -e .env.development -- npx prisma generate && npx prisma db push",
    "clean-build": "rimraf build",
    "clean-install": "rimraf node_modules package-lock.json yarn.lock pnpm-lock.yaml",
    "clean": "pnpm run clean-build && pnpm run clean-install",
    "local": "dotenv -e .env.development -- ts-node",
    "predev": "concurrently 'pnpm run swagger' 'pnpm run prisma-generate-dev'",
    "dev": "pnpm run predev && dotenv -e .env.development -- nodemon --watch src/ --exec ts-node src/index.ts",
    "prebuild": "concurrently 'pnpm run swagger' 'pnpm run clean-build'",
    "build": "pnpm run prebuild && tsc",
    "prestart": "pnpm run prisma-generate && pnpm run build",
    "start": "dotenv -e .env -- node build/index.js",
    "pretest": "concurrently 'dotenv -e .env.test -- npx prisma db push'",
    "test": "pnpm run pretest && dotenv -e .env.test -- vitest",
    "test-ci": "dotenv -e .env.test -- vitest run",
    "test-ui": "dotenv -e .env.test -- vitest --ui"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/config": "3.3.0",
    "@types/cookie-parser": "1.4.3",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/jsonwebtoken": "9.0.2",
    "@types/morgan": "1.9.4",
    "@types/node": "20.2.3",
    "@types/supertest": "2.0.12",
    "@types/swagger-ui-express": "4.1.3",
    "@typescript-eslint/eslint-plugin": "5.59.7",
    "@vitest/ui": "0.31.1",
    "concurrently": "8.0.1",
    "config": "3.3.9",
    "dotenv": "16.0.3",
    "dotenv-cli": "7.2.1",
    "eslint": "8.41.0",
    "eslint-config-standard-with-typescript": "34.0.1",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "morgan": "1.10.0",
    "nodemon": "2.0.22",
    "prisma": "4.10.0",
    "rimraf": "5.0.1",
    "supertest": "6.3.3",
    "ts-node": "10.9.1",
    "typescript": "4.9.5",
    "vitest": "0.31.1"
  },
  "dependencies": {
    "@prisma/client": "4.14.1",
    "bcryptjs": "2.4.3",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "express": "4.18.2",
    "jsonwebtoken": "9.0.0",
    "just-is-empty": "3.4.1",
    "just-omit": "2.2.0",
    "node-ts-cache": "4.4.0",
    "node-ts-cache-storage-memory": "4.4.0",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "4.6.3",
    "tsoa": "5.1.1",
    "winston": "3.8.2",
    "zod": "3.21.4"
  }
}

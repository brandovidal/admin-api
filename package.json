{
  "name": "node-prisma-mongo-skeleton",
  "version": "1.0.0",
  "description": "Node project skeleton using Typescript, ESLint, TS-Standard and Nodemon",
  "main": "index.js",
  "repository": "git@github.com:brandovidal/node-typescript-skeleton.git",
  "author": "Brando Vidal",
  "license": "MIT",
  "scripts": {
    "predev": "npm run swagger",
    "dev": "dotenv -e .env.dev -- nodemon --watch src/ --exec ts-node src/index.ts",
    "local": "dotenv -e .env.dev -- ts-node",
    "prebuild": "npm run swagger",
    "build": "tsc",
    "prestart": "npm run build && dotenv -e .env -- npx prisma db push",
    "start": "dotenv -e .env -- node build/index.js",
    "lint": "eslint src/",
    "lint-fix": "eslint src/ --fix",
    "prepare": "husky install",
    "prisma-generate": "dotenv -e .env.dev -- npx prisma db push",
    "pretest": "concurrently 'dotenv -e .env.test -- npx prisma db push'",
    "test": "dotenv -e .env.test -- vitest",
    "test-ci": "dotenv -e .env.test -- vitest run",
    "test-ui": "dotenv -e .env.test -- vitest --ui",
    "swagger": "tsoa spec"
  },
  "devDependencies": {
    "@types/cors": "2.8.13",
    "@types/express": "4.17.15",
    "@types/morgan": "1.9.4",
    "@types/node": "18.11.18",
    "@types/supertest": "2.0.12",
    "@types/swagger-ui-express": "4.1.3",
    "@typescript-eslint/eslint-plugin": "5.48.2",
    "@vitest/ui": "0.27.2",
    "concurrently": "7.6.0",
    "dotenv-cli": "7.0.0",
    "eslint": "8.32.0",
    "eslint-config-standard-with-typescript": "31.0.0",
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "morgan": "1.10.0",
    "nodemon": "2.0.20",
    "prisma": "4.9.0",
    "supertest": "6.3.3",
    "ts-node": "10.9.1",
    "typescript": "4.9.4",
    "vitest": "0.27.2"
  },
  "dependencies": {
    "@prisma/client": "4.9.0",
    "cors": "2.8.5",
    "express": "4.18.2",
    "just-is-empty": "3.3.0",
    "node-ts-cache": "4.4.0",
    "node-ts-cache-storage-memory": "4.4.0",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "4.6.0",
    "tsoa": "5.0.0",
    "winston": "3.8.2",
    "zod": "3.20.2"
  }
}
